<h1>Stories</h1>
    <div class="row">
        {{#each stories}}
            <div class="col s12 m4">
                <div class="card">
                    <div class="card-image">
                        {{{editIcon user ../user _id}}}
                    </div>
                    <div class="card-content center-aling">
                        <h5>{{title}}</h5>
                        <p>{{stripTags (truncate body 50)}}</p>
                        <br>
                        <div class="chip">
                        <img src="{{user.image}}" alt="" srcset="user image">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                        </div>
                    </div>
                    <div class="card-action center-aling">
                        <a href="/stories/{{_id}}" class="btn grey">Ler mais</a>
                    </div>
                </div>
            </div>
        {{else}}
            <p>Não tem estórias para mostrar</p>
        {{/each}}
    </div>
